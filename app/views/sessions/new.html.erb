<h2 class="ui center aligned large header">
  Business One Portal <em>POLYTEC Komló</em>
</h2>

<h4 class="ui center aligned medium icon header">
  <i class="circular orange power off tiny icon"></i>
  Belépés
</h4>


<div class="ui placeholder segment">
  <div class="ui one column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Felhasználói név" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Felhasználói név" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Jelszó" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Jelszó" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Belépés", class: "ui orange submit button" %>
      <% end %>
    </div>
  </div>
</div>