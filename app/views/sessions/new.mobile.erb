<h1>Login page</h1>

<%= form_for(:session, :html => {class: "ui form", role: "form"}, url: login_path) do |f| %>
  <div class="field">
    <div class="ui right labeled left icon transparent input">
      <i class="tags icon"></i>
      <%= f.text_field :username, placeholder: "Log in with RFID", autofocus: true %>
      <a class="ui tag label">
        Scan RFID
      </a>
    </div>



  </div>
  <%= f.submit "Log in", class: 'ui orange submit button' %>
<% end %>