<div class="well results-block">
  <br>
  <div class="ui fluid card">
    <div class="content">
      <div class="header">
        <% if @checked == true %>
          Sikeres összerendelés
        <% else %>
          Sikertelen összerendelés
        <% end %>  
      </div>
    </div>
    <div class="content" align="center">
      <%= @checked == true ? image_tag("ok.png") : image_tag("wrong.png") %>
    </div>
    <div class="extra content">
      <div class="summary">
        <h4 class="ui header">
          <%= @result_text %>
        </h4>
      </div>  
    </div>
    <div class="content">
      <div class="ui grid">
        <div class="left aligned eight wide column"><%= link_to "Következő", check_vda_index_path, class: "ui primary button" %></div>
        <div class="right aligned eight wide column"><%= link_to "Kilépés", root_path, class: "ui primary button" %></div>
      </div>
    </div>
  </div>
</div>