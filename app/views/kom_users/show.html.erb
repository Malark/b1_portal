<h1 align="center"><%= @user.username %> felhasználói adatlapja</h1>
<div class="row">
  <div align="center", class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>
<div class="row">
  <div align="center", class="col-md-4 col-md-offset-4 center">
    <h2>Jogosultságok:</h2>
    <% if session[:role_warehouse] == true %>
      Raktár modul: <strong>IGEN</strong>
    <% else %>
      Raktár modul: <strong>NEM</strong>
    <% end %>
    <br>
    <% if session[:role_production] == true %>
      Gyártás modul: <strong>IGEN</strong>
    <% else %>
      Gyártás modul: <strong>NEM</strong>
    <% end %>
    <br>
  </div>
</div>