<h1 align="center">Felhasználók</h1>
<div align="center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), kom_user_path(user) %></li>
          <li class="article-title">
            <%= link_to user.username, kom_user_path(user) %>
            <%= " (admin)" if user.admin == '1' %>
          </li>
          <% if logged_in? and current_user.admin == '1' %>
            <li><%= link_to "Falhasználó törlése", kom_user_path(user), method: :delete,
              data: { confirm: "Biztos, hogy törölni szeretné a felhasználót?" } %></li>
            <li><%= link_to "Szerkesztés", edit_kom_user_path(user) %></li>
            <br>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
</div> 