<% flash.each do |message_type, message_content| %>
  <!--
  <div class="ui <%#= message_type %> message transition"%>
  -->
  <%= content_tag :div, class: "ui message #{ 'mobile-large-text' if session[:mobile_device] == true } transition" do %>
    <i class="close icon"></i>
    <div class="header">
      <%= message_content %>
    </div>
  <% end %>
<% end %>
