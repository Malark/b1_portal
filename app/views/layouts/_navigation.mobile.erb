<div class="ui massive inverted menu mobile-menu">
  <div class="ui stackable container">

    <%= link_to "B1 Portal - ZEBRA", root_path, class: "item" %>


    <div class="right menu">
      <% if logged_in? %>
        <div class="ui dropdown item">
          <%= current_user.username %> 
          <%= " (admin)" if current_user.admin? %>
          <i class="dropdown icon"></i>
          <div class="menu">
            <%= link_to "Saját profil megtekintése", user_path(current_user), class: "item" %>
            <div class="divider"></div>
            <%= link_to "Kilépés", logout_path, method: :delete, class: "item" %>
          </div>
        </div>
      <% else %>
        <div class="item">
          <%= link_to "Belépés", login_path, class: "ui orange button" %>
        </div>
      <% end %>
    </div>


  </div>
</div>