<%= content_tag :h3, class: "#{ 'mobile' if session[:mobile_device] == true }"  do %>
  Master címkék ellenőrzése
<% end %>
<br>
<br>
<%= form_tag check_labels_path, remote: true, method: :get, id: 'check-labels-form', class: 'ui reply form' do %> 
  <div class="field">
    <%= content_tag :div, class: "ui fluid icon input #{ 'massive' if session[:mobile_device] == true }"  do %>
      <%= text_field_tag :labelcheck22, nil, placeholder: "Kérem olvasson be egy master címke vonalkódot!", autofocus: true %>
      <%= button_tag '<i class="bordered inverted orange edit icon"></i>'.html_safe %>
    <% end %>
  </div>
<% end %>

<br>
<div class="well results-block">
  <strong>
    <%= content_tag :h3, class: "#{ 'mobile' if session[:mobile_device] == true }"  do %>
      Ellenőrzött raklapok száma: <%= session[:checked_labels].count %> / <%= session[:labels].count %>
    <% end %>
  </strong>
</div> 

