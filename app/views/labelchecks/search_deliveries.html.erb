<h2 align="left">Szállítások ellenőrzése</h2> 
<br>
<div align="left">

  <%= form_tag search_deliveries_path, remote: true, method: :get, id: 'customer-lookup-form' do %>

    <%= label_tag :labelcheck, "Vevőcsoport" %>
    <div class="field">
      <%= collection_select( :labelcheck, :customer, Vevocsoport.all, :Code, :Name, {:include_blank => 'Kérem válasszon...'}, class: "ui dropdown") %>
    </div>

    <br>
    <br>
      <div class="grouped fields">
          <% @customer_groups.each do |row| %>
            <%= content_tag :div, class: "field #{ 'mobile-large-text' if session[:mobile_device] == true }"  do %>
              <%= radio_button_tag "customer_group", row["Code"], false %>
              <%= "   " %> <%= row["Name"] %>
              <br>
              <br>
            <% end %>
          <% end %>
      </div>
      
    <br>
    <div class="form-group">
      <%= button_tag(type: :submit, class: "ui basic orange button") do %>
        Keresés
      <% end %>
    </div>

  
  <% end %>

  <br>

  <div id="deliveries">
    <%= render 'deliveries' %>
  </div>
  <br>
  <br>
  <%= link_to 'Vissza', root_path %>  

</div>