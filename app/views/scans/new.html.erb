<h4 align="left">Master label</h4> 

<div align="left">

<%= form_for(:scan, :html => {class: "form-horizontal", role: "form"}, url: scan_path) do |f| %>

  <div class="form-group">
    <div class="col-sm-1">
      <%= f.text_field :scan, class: "form-control", placeholder: "Raklap sorszám...", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div align="center" class="col-sm-1">
      <%= f.submit "Küldés", class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>

</div>

